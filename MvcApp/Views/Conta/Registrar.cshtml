@model Biblioteca.Modelos.Usuario

@{
    ViewBag.Title = "Registrar";
}

<hgroup class="title">
    <h1>Registrar.</h1>
    <h2>Use o formulário abaixo para criar uma nova conta.</h2>
</hgroup>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Ocorreu um erro ao criar a conta, tente novamente.")

@using (Html.BeginForm((string)ViewBag.FormAction, "Conta")) {
    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome)
                @Html.ValidationMessageFor(m => m.Nome)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Senha)
                @Html.PasswordFor(m => m.Senha)
                @Html.ValidationMessageFor(m => m.Senha)
            </li>
             <li>
                @Html.LabelFor(m => m.Apelido)
                @Html.TextBoxFor(m => m.Apelido)
                @Html.ValidationMessageFor(m => m.Apelido)
            </li>
        </ol>
        <input type="submit" value="Registrar" title="Registrar" />
    </fieldset>
}