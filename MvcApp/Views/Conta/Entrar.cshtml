@model MvcApp.Models.LogOnModel

@{
    ViewBag.Title = "Entrar";
}

<hgroup class="title">
    <h1>Entrar.</h1>
    <h2>Coloque seu e-mail e senha abaixo.</h2>
</hgroup>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Login sem sucesso. Tente novamente.")

@using (Html.BeginForm((string)ViewBag.FormAction, "Conta")) {
    <fieldset>
        <legend>Formulario de entrada</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Senha)
                @Html.PasswordFor(m => m.Senha)
                @Html.ValidationMessageFor(m => m.Senha)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.Lembrar)
                @Html.LabelFor(m => m.Lembrar, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Entrar" title="Entrar" />
    </fieldset>
    <p>
        @Html.ActionLink("Registrar", "Registrar") se você não tem uma conta.
    </p>
}